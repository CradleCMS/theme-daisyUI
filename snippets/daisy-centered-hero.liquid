<div class="hero min-h-screen" style="background-image: url({{ 'otf.jpg' | asset_url }});">
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-xl">
      {% if settings.header_otf_title %}
        <h1 class="mb-5 text-5xl font-bold">{{ settings.header_otf_title }}</h1>
      {% endif %}
      {% if settings.header_otf_text %}
        <p class="mb-5">{{ settings.header_otf_text }}</p>
      {% endif %}
      {% if settings.header_otf_button_link and settings.header_otf_button_text %}
        <button class="btn btn-primary" href="{{ settings.header_otf_button_link }}">{{ settings.header_otf_button_text }}</button>
      {% endif %}
    </div>
  </div>
</div>
