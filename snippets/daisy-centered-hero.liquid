<div class="hero min-h-screen" style="background-image: url({{ 'otf.jpg' | asset_img_url:'1024','0' }});">
  <div class="hero-overlay bg-opacity-10"></div>
  <div class="hero-content text-center">
    <div class="max-w-xl">
      {% if settings.header_otf_title %}
        <h1 class="mt-20 mb-5 text-5xl font-bold">{{ settings.header_otf_title }}</h1>
      {% endif %}
      {% if settings.header_otf_text %}
        <p class="mb-5">{{ settings.header_otf_text }}</p>
      {% endif %}
      {% if settings.header_otf_fgimage_use %}
        <img class="mx-auto" src="{{ 'otf-fg.png' | asset_img_url:'450','0' }}">
      {% endif %}
      {% if settings.header_otf_button_link and settings.header_otf_button_text %}
        <button class="btn btn-primary" href="{{ settings.header_otf_button_link }}">{{ settings.header_otf_button_text }}</button>
      {% endif %}
    </div>
  </div>
</div>
