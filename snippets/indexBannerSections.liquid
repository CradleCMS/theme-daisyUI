{% if settings.section_banner.size > 0 %}
    {% for banner in settings.section_banner %}
        {% capture thecycle %}{% cycle 'odd', 'even' %}{% endcapture %}
        <section class="card p-2 md:p-4 lg:p-8 m-w-96 md:w-auto lg:w-auto {{ settings.general_shadow }} justify-center mt-10 mb-20 index-{{ forloop.index }}" style="background-color:{{ banner.sectionBannerBgColor }};">
          <div class="card mb-4 {% if banner.linkImageFullwidth %}flex-col-reverse{% else %}lg:flex-row{% if thecycle == 'odd' %}-reverse{% endif %} md:flex-row{% if thecycle == 'odd' %}-reverse{% endif %}{% endif %} justify-center items-center">
              {% if banner.link_image %}
                  {% if banner.linkImageFullwidth %}
                    {% if banner.linkImageURL.size > 0 %}<a href="{{ banner.linkImageURL }}">{% endif %}
                      <figure class="w-full">
                        <img loading="lazy" class="w-full rounded-box" src="{{ banner.link_image | asset_img_url:1600,0,'cropped' }}" alt="{{ banner.link_image_alt | t:'index' }}"/>
                      </figure>
                    {% if banner.linkImageURL %}</a>{% endif %}
                  {% else %}
                      {% if banner.linkImageURL.size > 0 %}<a href="{{ banner.linkImageURL }}">{% endif %}
                      <figure class="lg:w-2/6 md:w-2/5{% if settings.section_banner1_image_padding %} p-8{% endif %}">
                        <img loading="lazy" src="{{ banner.link_image | asset_img_url:400,0,'cropped' }}" alt="{{ banner.link_image_alt | t:'index' }}"/>
                      </figure>
                      {% if banner.linkImageURL %}</a>{% endif %}
                  {% endif %}
              {% endif %}
              {% if banner.link_title or banner.link_text or banner.link_url or banner.link2_url %}
                  <div class="{% unless banner.linkImageFullwidth %}lg:w-1/3 md:w-3/5{% endunless %} max-w-[45rem] card-body justify-center">
                    {% if banner.link_title %}
                        <h2 class="card-title text-3xl lg:text-5xl mb-4 font-bold justify-center">{{ banner.link_title | t:'index' }}</h2>
                    {% endif %}
                    {% if banner.link_text %}
                        <p class="text-center grow-0 mb-4">{{ banner.link_text | t:'index' }}</p>
                    {% endif %}
                    {% if banner.link_url or banner.link2_url %}
                        <div class="card-actions justify-center">
                          {% if banner.link_url %}<a href="{{ banner.link_url }}" class="btn btn-primary">{{ banner.link_button_title | t:'index' }}</a>{% endif %}
                          {% if banner.link2_url %}<a href="{{ banner.link2_url }}" class="btn btn-primary">{{ banner.link2_button_title | t:'index' }}</a>{% endif %}
                        </div>
                    {% endif %}
                  </div>
              {% endif %}
          </div>
        </section>
    {% endfor %}
{% endif %}