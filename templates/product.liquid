{% include 'structured-data' %}

<div class="flex flex-col lg:flex-row">
    <div class="w-full px-2 pb-2 lg:w-1/2 flex flex-col-reverse md:flex-row">
        {% if product.images.size > 0 %}
        <div class="flex flex-row md:flex-col justify-center md:justify-start md:w-1/6 md:pt-20 mr-2 gap-2">
            <a href="#itemfeatured" class=""><img alt="{{ product.featuredImage.alt }}" src="{{ product.featuredImage.src | product_img_url:'50','0' }}"/></a>
          {% for image in product.images %}
            {% if image.src == product.featuredImage.src %}{% continue %}{% endif %}
            <a href="#item{{ forloop.index0 }}" class=""><img alt="{{ image.alt }}" src="{{ image | product_img_url:'50','0' }}" /></a> 
          {% endfor %}
        </div>
        {% endif %}
      <div class="carousel {% if product.images.size > 0 %}md:w-5/6{% else %}w-full{% endif %}">
          <div id="itemfeatured" class="carousel-item items-start w-full pt-20 max-h-max">
              <img class="w-full max-h-max" alt="{{ product.featuredImage.alt }}" src="{{ product.featuredImage.src | product_img_url:'400','0' }}"/>
          </div>
          {% for image in product.images %}
            {% if image.src == product.featuredImage.src %}{% continue %}{% endif %}
            <div id="item{{ forloop.index0 }}" class="carousel-item items-start w-full pt-20 max-h-max">
                <img class="w-full max-h-max" alt="{{ image.alt }}" src="{{ image | product_img_url:'400','0' }}" />
            </div> 
        {% endfor %}
      </div>
    </div>
    <div class="w-full lg:w-1/2 lg:mt-20">
        <div class="px-4">
            {% include 'daisy-breadcrumbs' %}
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                  <h1 class="text-xl font-bold">{{ meta.h1 }}</h1>
                  {% if product.keyFeatures.size > 0 %}
                    <ul class="">
                        {% for keyFeature in product.keyFeatures %}
                        <li>
                            {{ keyFeature }}
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}            
                {{ product.html }}
                {% if settings.product_variant_table and product.variants.size > 1 %}
                <table class="table w-full mt-4 overflow-x-auto">
                    <thead>
                        <tr>
                            <th></th>
                            {% if settings.product_variant_table_sku %}<th>SKU</th>{% endif %}
                            {% for option in product.optionKeys %}
                            <th>{{ product.options[option] }}</th>
                            {% endfor %}
                            {% if settings.product_variant_table_price %}<th>Price</th>{% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for v in product.variants %}
                        <tr>
                            {% if settings.product_variant_table_image %}<th class="p-0 md:p-2"><img src="{{ v.image | product_img_url: "50", "50", "cropped" }}"></th>{% else %}<th>{{ forloop.index0 | plus:1 }}</th>{% endif %}
                            {% if settings.product_variant_table_sku %}<th>{{ v.sku }}</th>{% endif %}
                            {% for option in product.optionKeys %}
                            <td>{{ v.options[option] }}</td>
                            {% endfor %}
                            {% if settings.product_variant_table_price %}<td>{{ v.price | money_with_currency }}</td>{% endif %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% endif %}
            </div>
        </div>
    </div>    
</div>