<!DOCTYPE html>
<html data-theme="{{ settings.closed-daisy-theme }}" class="text-base-content">
    <head>
        <meta charset="utf-8" />
        <title>
        	{{ site.name }} {% if meta.title != blank and meta.title != site.name %} | {{meta.title}}{% endif %}
        </title>	
        {% if metaDescription %}
        <meta name="description" content="{{ metaDescription | escape }}" />
        {% endif %}
        {% if metaKeywords %}
        <meta name="keywords" content="{{ metaKeywords | escape }}" />
        {% endif %}
        <link rel="canonical" href="{{ canonicalUrl }}" />
        {% include 'open-graph-tags' %}
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        {% if settings.favicon_enable %}
            <link rel="icon" href="{{ 'favicon.ico' | asset_img_url }}" sizes="any">
            <link rel="icon" type="image/png" sizes="16x16" href="{{ 'favicon.png' | asset_img_url:'16','16' }}">
            <link rel="icon" type="image/png" sizes="32x32" href="{{ 'favicon.png' | asset_img_url:'32','32' }}">
            <link rel="icon" href="{{ 'icon.svg' | asset_img_url }}" type="image/svg+xml">
            <link rel="apple-touch-icon" href="/apple-touch-icon.png">
            <link rel="manifest" href="{{ 'manifest.json' | asset_url }}">
            <meta name="msapplication-TileColor" content="#da532c">
            <meta name="theme-color" content="#ffffff">
        {% endif %}
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" type="text/css" href="{{ 'typography.css' | asset_url }}">
        <link rel="stylesheet" type="text/css" href="{{ 'daisy-full.css' | asset_url }}">
        <link rel="stylesheet" type="text/css" href="{{ 'custom.css' | asset_url }}">
    </head>
    <body id="{{ meta.title | handle }}" class="text-base-content flex flex-col justify-between min-h-[100vh] {% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | split: ' ' | first | handle }}">
        <div class="hero min-h-screen" style="background-image: url({{ 'closed-bg.jpg' | asset_img_url:'1024','0' }});">
          <div class="hero-overlay bg-opacity-10"></div>
          <div class="hero-content text-center card bg-{{ settings.closed_dialog_colors }} text-{{ settings.closed_dialog_colors }}-content">
            <div class="max-w-xl">
                <header class="p-8">
                  {% if settings.closed_fgimage_use %}
                    <img class="mx-auto mb-5" src="{{ 'closed-fg.png' | asset_img_url: settings.closed_fgimage_size,'0' }}">
                  {% endif %}
                  {% if settings.closed_title %}
                    <h1 class="mt-5 mb-5 text-5xl font-bold">{{ settings.closed_title }}</h1>
                  {% endif %}
                  {% if settings.closed_text %}
                    <p class="mb-5">{{ settings.closed_text }}</p>
                  {% endif %}
              </header>
              {% if settings.closed_signup_true %}
                {% if settings.closed_daisysignup_true %}
                  <div class="card shrink-0 w-full max-w-m mb-5">
                        {% form 'signup' %}
                            <div class="card-body">
                                <p class="">{{ settings.closed_signup_text }}</p>
                                {% if form.errors %}
                                    <div class="alert alert-error">
                                        <span>Sorry, looks like something went wrong, please try again.</span>
                                    </div>
                                {% endif %}
                                {% if form.success %}
                                    <div class="alert alert-success">
                                        <span>Thank you for the message, we will contact you shortly!</span>
                                    </div>
                                {% else %}
                                <div class="form-control">
                                    <label class="{% if form.errors contains 'email' %} input-error{% endif %} flex items-center gap-2">
                                      <input type="email" name="email" class="grow  input input-bordered" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="Email" autocorrect="off" autocapitalize="off" required />
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary">Send</button>
                                {% endif %}
                            </div>
                        {% endform %}
                    </div>
                {% else %}
                    <div class="mb-5">
                        {% form 'signup' %}{% endform %}    
                    </div>
                {% endif %}
              {% endif %}
              {% if settings.closed_button_link and settings.closed_button_text %}
                <a class="btn btn-primary mb-5" href="{{ settings.closed_button_link }}">{{ settings.closed_button_text }}</a>
              {% endif %}
              {% if settings.closed_social_true %}
                <div class="grid grid-flow-col gap-8 justify-center mb-5">
                    {% unless settings.twitter_url == blank %}
                        <a href="{{ settings.twitter_url }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path></svg></a>
                    {% endunless %}
                    {% unless settings.youtube_url == blank %}
                        <a href="{{ settings.youtube_url }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path></svg></a>
                    {% endunless %}
                    {% unless settings.facebook_url == blank %}
                        <a href="{{ settings.facebook_url }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"></path></svg></a>
                    {% endunless %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
    </body>
</html>
